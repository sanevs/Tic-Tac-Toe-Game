<Window x:Class="GameClient.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient"
        mc:Ignorable="d"
        Title="Sign Up" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        >
    <DockPanel>
        <TextBlock DockPanel.Dock="Top">
            Введите IP, порт, имя игрока и нажмите ИГРАТЬ 
        </TextBlock>
        <TextBox DockPanel.Dock="Top" x:Name="ip"/>
        <TextBox DockPanel.Dock="Top" x:Name="port"/>
        <TextBox DockPanel.Dock="Top" x:Name="name" Focusable="True"/>
        <Button Click="Button_Click" 
                FontSize="50" FontStyle="Oblique"
                Margin="10"
                Background="Green"
                IsDefault="True">
            ИГРАТЬ
        </Button>
    </DockPanel>
</Window>
